<body>
    <div class="container mt-1 d-flex justify-content-between bg-danger border border-danger rounded-2 text-light">
        <div class="mssv d-flex align-items-center">
            <h4 class="">21120297</h4>
        </div>
        <div class="title d-flex align-items-center">
            <h1>Movie Information</h1>
        </div>
        <div class="d-flex align-items-center">
            <div class="form-check form-switch">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dark mode</label>
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            </div>
        </div>   
    </div>
    {{> navbar}}
    <div class="container">
        {{{body}}}
    </div>  
    {{> footer}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            function setDarkModePreference(isDarkMode) {
                const htmlElement = $('html');
                if (isDarkMode) {
                    htmlElement.attr('data-bs-theme', 'dark');
                } else {
                    htmlElement.attr('data-bs-theme', 'light');
                }
                localStorage.setItem('darkMode', isDarkMode);
                $('#flexSwitchCheckDefault').prop('checked', isDarkMode); // Update the checkbox state
            }

            $('#flexSwitchCheckDefault').change(function() {
                const isChecked = $(this).is(':checked');
                setDarkModePreference(isChecked);
            });

            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            setDarkModePreference(isDarkMode); // Set initial theme and checkbox state
        });

    </script>
</body>
</html>